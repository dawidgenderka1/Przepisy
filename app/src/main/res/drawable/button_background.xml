<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="#3700B3" /> <!-- Ciemniejszy fioletowy kolor tła przy naciśnięciu -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6200EE" /> <!-- Fioletowy kolor tła -->
            <corners android:radius="16dp"/> <!-- Zaokrąglenie rogów -->
        </shape>
    </item>
</selector>

